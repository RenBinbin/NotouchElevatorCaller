<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_call_landing"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    tools:context=".huti.CallElevatorActivity"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_above="@+id/tv_showMsg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前层"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current"/>
        <com.canny.no_touch_elevator.wheelview.WheelView
            android:id="@+id/wv_left"
            android:layout_width="60dp"
            android:layout_height="300dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_above="@+id/tv_showMsg"
        android:layout_marginRight="50dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="目的层"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Destination"/>
        <com.canny.no_touch_elevator.wheelview.WheelView
            android:id="@+id/wv_right"
            android:layout_width="60dp"
            android:layout_alignParentRight="true"
            android:layout_height="300dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
   <LinearLayout
       android:layout_centerInParent="true"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="vertical">
       <ImageView
           android:src="@drawable/up"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="50dp"
           android:layout_above="@+id/iv_set"
           android:layout_marginBottom="40dp"
           android:id="@+id/iv_up"/>
       <ImageView
           android:src="@drawable/ok1"
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:id="@+id/iv_set"
           android:layout_centerInParent="true"/>
       <ImageView
           android:layout_width="60dp"
           android:layout_height="60dp"
           android:src="@drawable/down"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="40dp"
           android:layout_below="@+id/iv_set"
           android:id="@+id/iv_down"/>
   </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_above="@+id/tv_showMsg"/>
    <TextView
        android:text="111111"
        android:gravity="center_horizontal"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:id="@+id/tv_showMsg"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_neihu"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:background="@drawable/setbar_bg"
            android:text="转内呼"
            android:textSize="12dp"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="100dp"
            android:src="@mipmap/canny2"
            android:id="@+id/imageView" />
    </LinearLayout>
</RelativeLayout>
