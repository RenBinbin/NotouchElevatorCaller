<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context="com.canny.no_touch_elevator.fragments.ApplyFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*用户手机"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"/>
        <EditText
            android:id="@+id/et_phone"
            android:textColor="@color/black"
            android:background="@color/white"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:hint="请输入手机号"
            android:layout_toRightOf="@+id/tv_phone"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*访客类型"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/tv_style_select"
            android:textSize="15sp"
            android:hint="==请选择=="
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_style"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*授权电梯"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/tv_author_elevator"
            android:textSize="15sp"
            android:hint="==请选择=="
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_author"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_floor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*授权楼层"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/tv_author_floor"
            android:textSize="15sp"
            android:hint="==请选择=="
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_floor"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="授权次数"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/tv_author_num"
            android:textSize="15sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_num"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1则不限制"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:textSize="18sp"
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="失效时间"
            android:textColor="@color/white"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="13dp"/>
        <TextView
            android:id="@+id/tv_time_show"
            android:textSize="15sp"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_time"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="为空则不限制"
            android:textColor="@color/red"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="13dp"/>
    </RelativeLayout>

    <Button
        android:background="@drawable/setbar_bg"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="确定"
        android:id="@+id/btn_ok"
        android:textColor="@color/white"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginBottom="12dp"
            android:id="@+id/tv_introduce"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_alignBottom="@+id/tv_english"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您的电梯时间管家 "/>
        <TextView
            android:layout_alignBottom="@+id/iv_canny"
            android:id="@+id/tv_english"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your elevator time butler"
            android:layout_marginBottom="12dp"/>
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_alignParentBottom="true"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:src="@mipmap/canny2"
            android:id="@+id/iv_canny"
            android:layout_marginRight="190dp"/>
    </RelativeLayout>


</LinearLayout>
